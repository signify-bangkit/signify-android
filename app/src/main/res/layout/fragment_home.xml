<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:transitionName="content_layout_shared"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.fragment.home.home.HomeFragment">

    <Button
        android:id="@+id/btn_navigate_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/blueOne"
        android:text="To Detail Article"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_navigate_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/blueOne"
        android:text="To Analyze"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_navigate_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/blueOne"
        android:text="To History"
        android:textColor="@color/white" />

</LinearLayout>